%ul.nav.nav-tabs#${1:nav}
  %li.nav-item
    %a.nav-link.active{href: '#${4:tab}-1'} ${3:Active}
  %li.nav-item.dropdown
    %a.nav-link.dropdown-toggle{'aria-expanded': 'false', 'aria-haspopup': 'true', 'data-toggle': 'dropdown', href: '#', role: 'button'} ${5:Dropdown}
    .dropdown-menu
      %a.dropdown-item{href: '#${7:tab}-2'} ${6:Action}
      %a.dropdown-item{href: '#${9:tab}-3'} ${8:Another action}
      .dropdown-divider
      %a.dropdown-item{href: '#${11:tab}-4'} ${10:Action}
  %li.nav-item
    %a.nav-link{href: '#${13:tab}-5'} ${12:Another link}
  %li.nav-item
    %a.nav-link.disabled{href: '#'} ${14:Disabled}

.tab-content
  .tab-pane.fade.show.active#${4:tab}-1{role: 'tabpanel'} $15
  .tab-pane.fade#${7:tab}-2{role: 'tabpanel'} $16
  .tab-pane.fade#${9:tab}-3{role: 'tabpanel'} $17
  .tab-pane.fade#${11:tab}-4{role: 'tabpanel'} $18
  .tab-pane.fade#${13:tab}-5{role: 'tabpanel'} $19

:javascript
  $('#${1:nav} a').click(e => {
  	e.preventDefault();
  	$(this).tab('show');
  });
