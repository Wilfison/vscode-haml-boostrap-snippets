.carousel.slide#${1:carousel}{'data-bs-ride': 'false'}
  .carousel-indicators
    %button.active{'aria-current': 'true', 'aria-label': 'Slide 1', 'data-bs-slide-to': '0', 'data-bs-target': '#$1', type: 'button'}
    %button{'aria-label': 'Slide 2', 'data-bs-slide-to': '1', 'data-bs-target': '#$1', type: 'button'}
    %button{'aria-label': 'Slide 3', 'data-bs-slide-to': '2', 'data-bs-target': '#$1', type: 'button'}

  .carousel-inner
    .carousel-item.active
      %img.d-block.w-100{alt: '${2:First slide}', src: '#'}
      .carousel-caption.d-none.d-md-block
        %h5 ${2:First slide}
        %p Some representative placeholder content for the first slide.

    .carousel-item
      %img.d-block.w-100{alt: '${4:Second slide}', src: '#'}
      .carousel-caption.d-none.d-md-block
        %h5 ${4:Second slide}
        %p Some representative placeholder content for the second slide.

    .carousel-item
      %img.d-block.w-100{alt: '', src: '#'}
      .carousel-caption.d-none.d-md-block
        %h5 ${6:Third slide}
        %p Some representative placeholder content for the third slide.

  %button.carousel-control-prev{'data-bs-slide': 'prev', 'data-bs-target': '#$1', type: 'button'}
    %span.carousel-control-prev-icon{'aria-hidden': 'true'}
    %span.visually-hidden Previous

  %button.carousel-control-next{'data-bs-slide': 'next', 'data-bs-target': '#$1', type: 'button'}
    %span.carousel-control-next-icon{'aria-hidden': 'true'}
    %span.visually-hidden Next
