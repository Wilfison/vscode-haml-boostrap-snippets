%button.btn.btn-primary{'data-bs-target': '#${2:modal}', 'data-bs-toggle': 'modal', type: 'button'}
  ${3:Launch modal}

.modal.fade.${2:modal}{'aria-hidden': 'true', 'aria-labelledby': '${2:modal}-label', tabindex: '-1'}
  .modal-dialog.modal-${1|lg,md,sm,xs|}
    .modal-content
      .modal-header
        %h1.modal-title.fs-5#${2:modal}-label ${4:Modal title}
        %button.btn-close{'aria-label': 'Close', 'data-bs-dismiss': 'modal', type: 'button'}
      .modal-body
        $0
      .modal-footer
        %button.btn.btn-secondary{'data-bs-dismiss': 'modal', type: 'button'}
          ${4:Close}
        %button.btn.btn-primary{type: 'button'} ${5:Save changes}
