%button.btn.btn-primary#open-${1:toast}-btn{type: 'button'}
  Show toast

.toast-container.position-fixed.bottom-0.end-0.p-3
  .toast#${1:toast}{'aria-atomic': 'true', 'aria-live': 'assertive', role: 'alert'}
    .toast-header
      %svg.bi.bi-bell{fill: 'currentColor', height: '20', viewbox: '0 0 16 16', width: '20', xmlns: 'http://www.w3.org/2000/svg'}
        %path{d: 'M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2zM8 1.918l-.797.161A4.002 4.002 0 0 0 4 6c0 .628-.134 2.197-.459 3.742-.16.767-.376 1.566-.663 2.258h10.244c-.287-.692-.502-1.49-.663-2.258C12.134 8.197 12 6.628 12 6a4.002 4.002 0 0 0-3.203-3.92L8 1.917zM14.22 12c.223.447.481.801.78 1H1c.299-.199.557-.553.78-1C2.68 10.2 3 6.88 3 6c0-2.42 1.72-4.44 4.005-4.901a1 1 0 1 1 1.99 0A5.002 5.002 0 0 1 13 6c0 .88.32 4.2 1.22 6z'}

      %strong.me-auto ${2:Alert}
      %small ${3:11 mins ago}
      %button.btn-close{'aria-label': 'Close', 'data-bs-dismiss': 'toast', type: 'button'}

    .toast-body ${4:Hello, world! This is a toast message.}

:javascript
  const toastTrigger = document.getElementById('open-${1:toast}-btn');
  const toastLiveExample = document.getElementById('${1:toast}');

  if (toastTrigger) {
    toastTrigger.addEventListener('click', () => {
      const toast = new bootstrap.Toast(toastLiveExample);

      toast.show();
    });
  }
